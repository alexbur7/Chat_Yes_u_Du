<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">


        <EditText
            android:id="@+id/email_log_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/password_log_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/pass_hint"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/login_log_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_button"
            android:layout_marginTop="32dp"
            android:text="@string/login_button_text"
            android:textColor="@color/chat_text"/>

        <Button
            android:id="@+id/reg_log_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/edit_button"
            android:padding="8dp"
            android:text="@string/reg_button_text"
            android:textColor="@color/chat_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="111dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="49dp"
            android:text="@string/read_rules"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/rule_and_pol"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/rule_and_policy"
            android:textColor="?attr/colorPrimaryDark"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/rules_of_res"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rule_and_resources"
            android:textColor="?attr/colorPrimaryDark"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
</LinearLayout>