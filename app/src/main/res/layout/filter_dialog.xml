<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView5" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_name"
                android:id="@+id/textView6"
                android:layout_marginLeft="6dp"/>

            <EditText
                android:id="@+id/name_filter_edit_text"
                android:hint="@string/name_edit_text_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_sex"
                android:id="@+id/textView5"
                android:layout_marginLeft="6dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_male"
                    android:id="@+id/genderMaleCheckBox"
                    android:layout_weight="1" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_female"
                    android:id="@+id/genderFemaleCheckBox"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_age"
                android:id="@+id/textView7"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="6dp" />

            <Spinner
                android:id="@+id/spinner_age_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/age_for_spinner"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/country_label"
                android:id="@+id/textView8"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="6dp" />

            <Spinner
                android:id="@+id/spinner_country_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/region_label"
                android:id="@+id/textView9"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="6dp" />

            <Spinner
                android:id="@+id/spinner_region_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/city_filter_edit_text"
                android:hint="@string/city_edit_text_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/onlineCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="@string/label_online" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>